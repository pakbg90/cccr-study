pipeline {
  agent {
    kubernetes {
      yamlFile 'kube/agent.yaml'
    }
  }
  stages {
    stage('Checkout') {
      steps {
        container('maven') {
          git branch: 'main', url: 'https://github.com/pakbg90/cccr-study.git'
        }
      }
    }
    stage('Build') {
      steps {
        container('maven') {
          sh 'mvn clean package -DskipTests=true'
        }
      }
    }
    stage('Test') {
      steps {
        container('maven') {
          sh 'mvn test'
        }
      }
    }
    stage('Build & Tag & Push Docker Image') {
      steps {
        container('kaniko') {
          sh 'executor --context=dir://$WORKSPACE \
                       --destination=pakbg90/mykube:$BUILD_NUMBER \
                       --destination=pakbg90/mykube:latest'
        }
      }
    }
  }
}